<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.FinanceController">
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="800.0">
         <children>
            <VBox alignment="TOP_RIGHT" prefHeight="600.0" prefWidth="150.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Отчеты остатков на складе" />
                  <TableView fx:id="ItemsInStockTable" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="150.0">
                    <columns>
                      <TableColumn fx:id="DateColumn" prefWidth="75.0" text="Дата" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </TableView>
                  <Button fx:id="checkItemsInStock" alignment="CENTER_RIGHT" mnemonicParsing="false" onMouseClicked="#getItemsInStock" text="Рассчитать остатки" textAlignment="RIGHT">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="openItemsInStock" mnemonicParsing="false" text="Открыть остатки">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets left="15.0" top="15.0" />
         </BorderPane.margin>
      </AnchorPane>
   </center>
</BorderPane>
