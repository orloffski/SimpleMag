<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.StockController">
   <children>
      <BorderPane fx:id="stockRootLayout" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
         <left>
            <VBox fx:id="rootLayout" alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="items" fitHeight="80.0" fitWidth="80.0" onMouseClicked="#openItemsView" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                     <image>
                        <Image url="@../../resources/images/goods.png" />
                     </image>
                  </ImageView>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="товары" />
                  <ImageView fx:id="receipts" fitHeight="80.0" fitWidth="80.0" onMouseClicked="#openReceiptsView" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <image>
                        <Image url="@../../resources/images/receipts.png" />
                     </image>
                  </ImageView>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="поступления" />
                  <ImageView fx:id="returns" fitHeight="80.0" fitWidth="80.0" onMouseClicked="#openReturnsView" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <image>
                        <Image url="@../../resources/images/returns.png" />
                     </image>
                  </ImageView>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="возвраты" />
                  <ImageView fx:id="transfers" fitHeight="80.0" fitWidth="80.0" onMouseClicked="#openTransfersView" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <image>
                        <Image url="@../../resources/images/transfer.png" />
                     </image>
                  </ImageView>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="перемещения" />
               </children>
            </VBox>
         </left></BorderPane>
   </children>
</AnchorPane>
