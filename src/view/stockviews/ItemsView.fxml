<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.stockviews.ItemsViewController">
   <center>
      <TableView fx:id="itemsTable" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="700.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="vendorCodeColumn" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Артикул" />
          <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Наименование" />
            <TableColumn fx:id="vendorCountryColumn" prefWidth="75.0" text="Страна" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <right>
      <VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="70.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="add" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#addItem" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../resources/images/add.png" />
               </image>
            </ImageView>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Новый" />
            <ImageView fx:id="edit" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#editItem" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../resources/images/edit.png" />
               </image>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ImageView>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Изменть" />
            <ImageView fx:id="delete" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#deleteItem" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../resources/images/delete.png" />
               </image>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ImageView>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Удалить" />
         </children>
         <BorderPane.margin>
            <Insets top="25.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
