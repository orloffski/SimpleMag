<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.ItemsEntity" table="items" schema="minimag">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="vendorCode">
            <column name="vendor_code" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="createupdate">
            <column name="createupdate" sql-type="timestamp"/>
        </property>
        <property name="vendorCountry">
            <column name="vendor_country" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="unitId">
            <column name="unit_id" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>